<!DOCTYPE html>
<html>
	<head>
	    <title>Register</title>
		<!-- tailwind link -->
		<link href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet"/>
		<!-- Google fonts link -->
		<link href='https://fonts.googleapis.com/css?family=Nunito' rel='stylesheet'>
		<!-- CSS links -->
		<link rel="stylesheet" href="/css/styles.css" />

		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
		<script src="/js/register.js"></script>
	</head>
	
	<body>
		<div class="navigation">
			<div class="logo-div flex">
				<img src="/images/logo.png" class="logo">
			</div>
		</div>

		<h1>Conference Room Booking</h1>
		
		<div class="box">
			<h2>REGISTRATION</h2>
			<form action="/register" method="post" id="registerForm">
				<input name="username" id="username" type="text" placeholder="Username"/>
				<input name="password" id="password1" type="password" placeholder="Password"/>
				<input type="password" id="password2" placeholder="Confirm Password"/>
				
				<p font-family="Nunito" font-size="16px" id="errorMessage"></p>
				<button text="REGISTER" id="registerBtn" disabled>REGISTER</button>
			</form>
		</div>
	</body>
</html>

